<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" thread-count="5" parallel="tests">

    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>

    <test verbose="2" preserve-order="true" name="FirefoxTest">
        <parameter name="os" value="Windows">
        </parameter>
         <parameter name="browser" value="firefox">
        </parameter>

        <classes>
            <class name="testCases.TC001_AccountRegistrationTest">
                <methods>
                    <include name="verify_account_registration"/>
                </methods>
            </class>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="edge">
        <parameter name="os" value="Windows">
        </parameter>
        <parameter name="browser" value="MicrosoftEdge">
        </parameter>

        <classes>
            <class name="testCases.TC001_AccountRegistrationTest">
                <methods>
                    <include name="verify_account_registration"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="ChromeTest">
        <parameter name="os" value="Windows">
        </parameter>
        <parameter name="browser" value="chrome">
        </parameter>

        <classes>
            <class name="testCases.TC001_AccountRegistrationTest">
                <methods>
                    <include name="verify_account_registration"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>